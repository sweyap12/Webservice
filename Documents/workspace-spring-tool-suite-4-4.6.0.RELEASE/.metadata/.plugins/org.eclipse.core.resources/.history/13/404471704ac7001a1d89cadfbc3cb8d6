@RestController
public class TopicController
{
	
	@Autowired
	private EmployeeService empService;
	@RequestMapping(method=RequestMethod.GET ,value="employees/")
	public List<Employee>getAllEmps()
	{
		return empService.getAllEmps();
		
	}
	
	@RequestMapping(method=RequestMethod.GET ,value="employee/{id}")
	public List getEmps(@PathVariable String id)
	{
		return empService.getEmps(id);
		
	}

	@RequestMapping(method=RequestMethod.DELETE ,value="employee/{id}")
	public String deleteEmp(@PathVariable String id)
	{
		return empService.deleteEmp(id);
		
	}
	@RequestMapping(method=RequestMethod.POST,value="employees/")
	public String addEmp(HttpServletRequest request)
	{
		return empService.addEmp(request.getParameter("id"),request.getParameter("name"));
	
	}


	@PutMapping("employee/{id}")
//	public String updateEmp(@PathVariable String id,@RequestBody Employee detail)
//	{
//		//Employee detail=new Employee(id,name);
//		
//		return empService.updateEmp(id,detail);
	
	
	public String updateEmp(@PathVariable String id,@RequestBody Employee detail)
	{
		return empService.updateEmp(id,detail);
		
	}

}
	
	
	
	

	